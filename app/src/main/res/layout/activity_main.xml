<?xml version="1.0" encoding="utf-8"?><!--xml layer starts here
xml stands for extensible markup language
it is a background code layouts,widges etc-->
<!--constraint layout is one of the types of layout
layout_width indicates the width of the constraint layout
layout_Height indicates the height of the constraint layout
Match parent will take complete height or width of parent
context indicates the package name of the respective java class
-->
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tharani.icon_changer.MainActivity">
    <!--TextView is one of component of palette to display anything on layout
       width indicates the width of the TextView
       Height indicates the height of the TextView
       what ever we write in text it displays in output
       TextSize indicates the size of the text in sp units
       TextColor indicates the color of text
       String resources provide text string with optional text styling and formatting
        extracted string resource name and value in string.xml file
       -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/myuniverse"
        android:textSize="40sp"
        android:textColor="#861332"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout><!--end of constraint layout-->
